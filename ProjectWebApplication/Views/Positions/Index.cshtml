
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div ng-controller="positionsController as positions">
    <form ng-submit="addPosition()">
        <input type="text" ng-model="NewPosition.Name" placeholder="Nombre"/>
        <input type="text" ng-model="NewPosition.Description" placeholder="Description" />
        <input type="submit" class="btn btn-primary" value="Guardar" />
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in items">
                <td>{{item.Id}}</td>
                <td>{{item.Name}}</td>
                <td>{{item.Description}}</td>
            </tr>
        </tbody>      
    </table>

</div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/appCode/positions.js")"></script>
}

