
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Configuracions - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Project Brighton", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content config-container" ng-app="mainApp">
        <ul class="nav nav-pills sections" role="tablist">
            <li class="active" role="presentation"><a href="#positions" aria-controls="positions" role="tab" data-toggle="tab">Cargos</a></li>
            <li role="presentation"><a href="#industries" aria-controls="industries" role="tab" data-toggle="tab">Industrias</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="positions">
                @Html.Partial("~/Areas/Configurations/Views/Positions/Index.cshtml")
            </div>
            <div role="tabpanel" class="tab-pane" id="industries">
                @Html.Partial("~/Areas/Configurations/Views/Industries/Index.cshtml")
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/configuration")
</body>
</html>