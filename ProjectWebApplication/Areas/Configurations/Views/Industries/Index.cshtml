<h3 class="win-h3">Industrias</h3>
<div ng-controller="industriesController as industries">
    <form ng-submit="addIndustry()">
        <input type="text" class="win-textbox" ng-model="NewIndustry.Name" placeholder="Nombre" />
        <input type="text" class="win-textbox" ng-model="NewIndustry.Description" placeholder="Descripción" />
        <input type="submit" class="win-button win-button-primary" value="Guardar" />
    </form>
    <table class="table table-striped" ng-hide="items.length < 0">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in items">
                <td>{{item.Id}}</td>
                <td>{{item.Name}}</td>
                <td>{{item.Description}}</td>
                <td><a href="#" class="btn btn-sm btn-danger" ng-click="removeIndustry(item)">X</a></td>
            </tr>
        </tbody>
    </table>
</div>
