<div class="modal fade" id="editIndustryModal" tabindex="-1" role="dialog" aria-labelledby="editLabel">
    <div class="modal-dialog" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="editLabel">Editar Elemento</h4>
            </div>
            <div class="modal-body">
                <form ng-submit="updateIndustry()" class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label" for="edit-industry-name">Nombre</label>
                        <input id="edit-industry-name" type="text" class="form-control" ng-model="editedIndustry.Name" placeholder="Nombre" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="edit-industry-desc" class="control-label">Descripción</label>
                        <input type="text" id="edit-industry-desc" class="form-control" ng-model="editedIndustry.Description" placeholder="Descripción"/>
                    </div>
                    <div class="col-md-6 col-md-offset-6 text-right">
                        <button type="button" class="btn btn-danger " data-dismiss="modal">
                            <i class="fa fa-times"></i> Cancelar
                        </button>
                        <button type="submit" class="btn btn-primary ">
                            <i class="fa fa-save"></i> Guardar
                        </button>    
                    </div>                
                </form>
            </div>
        </div>
    </div>
</div>