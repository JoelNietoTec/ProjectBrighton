<div class="modal fade" id="newIndustryModal" tabindex="-1" role="dialog" aria-labelledby="newLabel">
    <div class="modal-dialog" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="newLabel">Nuevo Elemento</h4>
            </div>
            <div class="modal-body">
                <form ng-submit="addIndustry()" class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="sr-only" for="new-industry-name">Nombre</label>
                            <input id="new-industry-name" type="text" class="form-control" ng-model="newIndustry.Name" placeholder="Nombre" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="new-industry-desc" class="sr-only">Descripción</label>
                            <input type="text" id="new-industry-desc" class="form-control" ng-model="newIndustry.Description" placeholder="Descripción"/>
                        </div>  
                    </div>
                    <div class="col-md-2 col-md-offset-10">
                        <input type="submit" class="btn btn-primary" value="Guardar"/>
                   </div>           
                </form>
            </div>
        </div>
    </div>
</div>