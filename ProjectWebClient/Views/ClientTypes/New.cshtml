<div class="modal fade" id="newClientTypeModal" tabindex="-1" role="dialog" aria-labelledby="newLabel">
    <div class="modal-dialog modal-sm" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="newLabel">Nuevo Elemento</h4>
            </div>
            <div class="modal-body">
                <form ng-submit="addClientType()" class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="sr-only" for="new-clienttype-name">Nombre</label>
                            <input id="new-clienttype-name" type="text" class="form-control" ng-model="newClientType.Name" placeholder="Nombre" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-primary btn-lg btn-block" value="Guardar"/>
                   </div>           
                </form>
            </div>
        </div>
    </div>
</div>